{
  "name": "doc-review-service",
  "version": "1.0.0",
  "description": "A web application for uploading and storing PDF files in MinIO",
  "scripts": {
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && python app.py",
    "dev:backend:docker": "docker-compose -f docker-compose.dev.yml up backend",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "start": "cd backend && gunicorn --bind 0.0.0.0:3001 --workers 4 app:app",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": ["react", "python", "flask", "minio", "pdf", "upload"],
  "author": "",
  "license": "MIT"
}

